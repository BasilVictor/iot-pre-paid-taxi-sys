<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaxiPrePaidSystem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="Theme.TaxiPrePaidSystem.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <style name="Theme.TaxiPrePaidSystem.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@drawable/button_background</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="iconTint">@color/button_color</item>
    </style>

    <style name="Theme.TaxiPrePaidSystem..Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@drawable/button_background</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="iconTint">@color/button_color</item>
    </style>

    <style name="Theme.TaxiPrePaidSystem.ToolBarStyle" parent="Theme.TaxiPrePaidSystem">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="ShapeAppearanceOverlay.TaxiPrePaidSystem.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>